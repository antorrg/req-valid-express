{
  "name": "req-valid-express",
  "version": "1.0.7",
  "description": "Type-safe Express middleware for request validation (CJS, ESM, TS)",
  "license": "MIT",
  "keywords": [
    "express",
    "middleware",
    "validation",
    "typescript",
    "schemas"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist",
    "src/express-context.d.ts"
  ],
  "bin": {
    "validate-schema": "./dist/esm/cli.js"
  },
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs && cp src/express-context.d.ts dist/types/",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "prepare": "npm run build",
    "test": "npm run prepare && vitest run"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/antorrg/req-valid-express"
  },
  "bugs": {
    "url": "https://github.com/antorrg/req-valid-express/issues"
  },
  "dependencies": {
    "inquirer": "^12.9.2"
  },
  "peerDependencies": {
    "express": "^4.17.0 || ^5.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/inquirer": "^9.0.9",
    "@types/supertest": "^6.0.3",
    "express": "^5.1.0",
    "supertest": "^7.1.4",
    "typescript": "^5.4.0",
    "uuid": "^11.1.0",
    "vitest": "^4.0.13"
  }
}
